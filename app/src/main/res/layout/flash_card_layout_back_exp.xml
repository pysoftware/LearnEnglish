<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/ExpTextViewB"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expression"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/translationExpTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выражение"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/exampleExp1TextView"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/bananas"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/translateExampleExp1TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Сегодня я купил три банана блин"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/exampleExp2TextView"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/bananas"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/translateExampleExp2TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Сегодня я купил три банана блин"
                android:textAlignment="center"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/exampleExp3TextView"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/bananas"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/translateExampleExp3TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Сегодня я купил три банана блин"
                android:textAlignment="center"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>